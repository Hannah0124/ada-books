<%= form_with model: @book, class: 'create-book' do |f| %>
  <p>Please provide the following information to <%= action_name %> your book in our database:</p>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author %>
  <%= f.select :author_id,  Author.all.map { |auth| [auth.name, auth.id] } %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit action_name, class: "book-button" %>
<% end %>